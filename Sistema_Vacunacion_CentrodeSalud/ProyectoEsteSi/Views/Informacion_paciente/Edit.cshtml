@model ProyectoEsteSi.Models.Informacion_paciente

@{
    ViewData["Title"] = "Edit";
}

<br />
<h1 style="text-align:center">Editar información:</h1>

<hr />
<div class="row" style="justify-content:center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_nino" />
            <div class="form-group">
                <label asp-for="Numero_identidad" class="control-label"></label>
                <input asp-for="Numero_identidad" class="form-control" />
                <span asp-validation-for="Numero_identidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre_nino" class="control-label"></label>
                <input asp-for="Nombre_nino" class="form-control" />
                <span asp-validation-for="Nombre_nino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre_responsabe" class="control-label"></label>
                <input asp-for="Nombre_responsabe" class="form-control" />
                <span asp-validation-for="Nombre_responsabe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_nacimineto" class="control-label"></label>
                <input asp-for="Fecha_nacimineto" class="form-control" />
                <span asp-validation-for="Fecha_nacimineto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edad_cap" class="control-label"></label>
                <input asp-for="Edad_cap" class="form-control" />
                <span asp-validation-for="Edad_cap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contacto" class="control-label"></label>
                <input asp-for="Contacto" class="form-control" />
                <span asp-validation-for="Contacto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_direccion" class="control-label"></label>
                <select asp-for="Id_direccion" class="form-control" asp-items="ViewBag.Id_direccion"></select>
                <span asp-validation-for="Id_direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button value="Save" class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</button>
                <a asp-action="Index" class="btn btn-danger"><i class="fa fa-times-circle" aria-hidden="true"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
