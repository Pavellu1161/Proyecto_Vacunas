@model ProyectoEsteSi.Models.Informacion_paciente

@{
    ViewData["Title"] = "Details";
}

<br />
<h1 style="text-align:center">Información del paciente:</h1>


<div>
    <hr />

    <div style="display:flex; justify-content:center">
        <div style="display:flex; justify-content:center">
            <div class="form-group">
                <b>Número de identidad:</b>
                <span class="text">@Html.DisplayFor(model => model.Numero_identidad)</span>
                <br /><br />
                <b>Nombre completo del paciente:</b>
                <span class="text">@Html.DisplayFor(model => model.Nombre_nino)</span>
                <br /><br />
                <b>Nombre persona responsable:</b>
                <span class="text">@Html.DisplayFor(model => model.Nombre_responsabe)</span>
                <br /><br />
                <b>Fecha de nacimiento:</b>
                <span class="text">@Html.DisplayFor(model => model.Fecha_nacimineto)</span>
                <br /><br />
                <b>Edad de captación:</b>
                <span class="text">@Html.DisplayFor(model => model.Edad_cap)</span>
                <br /><br />
                <b>Número de contacto:</b>
                <span class="text"> @Html.DisplayFor(model => model.Contacto)</span>
               <br /><br />
               <b>Dirección:</b>
                <span class="text"> @Html.DisplayFor(model => model.Direcciones.Detalle_direccion)</span>
                <br /><br />
            </div>
        </div>

    </div>
</div>
<div style="display:flex; justify-content:center">
    <a asp-action="Edit" asp-route-id="@Model.Id_nino" class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a> |
    <a asp-action="Index" class="btn btn-danger"><i class="fa fa-times-circle" aria-hidden="true"></i> Cancelar</a>
</div>
