@model ProyectoEsteSi.Models.Informacion_paciente

@{
    ViewData["Title"] = "Details";
}

<br />
<h1 style="text-align:center">Información del paciente:</h1>


<div>
    <hr />

    <div style="display:flex; justify-content:center">
        <div style="display:flex; justify-content:center">
            <div class="form-group">
                <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Numero_identidad)</label>
                <span class="text">@Html.DisplayFor(model => model.Numero_identidad)</span>
                <br />
                <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Nombre_nino)</label>
                <span class="text">@Html.DisplayFor(model => model.Nombre_nino)</span>
                <br />
                <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Nombre_responsabe)</label>
                <span class="text">@Html.DisplayFor(model => model.Nombre_responsabe)</span>
                <br />
                <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Fecha_nacimineto)</label>
                <span class="text">@Html.DisplayFor(model => model.Fecha_nacimineto)</span>
                <br />
                <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Edad_cap)</label>
                <span class="text">@Html.DisplayFor(model => model.Edad_cap)</span>
                <br />
                <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Contacto)</label>
                <span class="text"> @Html.DisplayFor(model => model.Contacto)</span>
               <br />
                <label class="control-label" style="font-weight:bold">  @Html.DisplayNameFor(model => model.Direcciones)</label>
                <span class="text"> @Html.DisplayFor(model => model.Direcciones.Detalle_direccion)</span>
                <br />
            </div>
        </div>

    </div>
</div>
<div style="display:flex; justify-content:center">
    <a asp-action="Edit" asp-route-id="@Model.Id_nino" class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a> |
    <a asp-action="Index" class="btn btn-danger"><i class="fa fa-times-circle" aria-hidden="true"></i> Cancelar</a>
</div>
