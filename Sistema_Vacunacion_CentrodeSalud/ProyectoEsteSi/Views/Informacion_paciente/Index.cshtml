
@model ProyectoEsteSi.Common.Pagination<Informacion_paciente>

@{ ViewData["Title"] = "Index"; }

<br />
<h1 style="text-align:center; font-size:30px; font-weight:bold">INFORMACIÓN DEL PACIENTE:</h1>
<hr />
<br />

<div class="row">
    <a asp-action="Create" class="btn btn-success ml-5 mr-5"><i class="fa fa-plus-circle" aria-hidden="true"></i> Ingresar nuevo registro</a> 
    <div class="col-auto">
        <input type="text" class="form-control-plaintext " id="txt-search" placeholder="Buscar..." />
    </div>
    <div class="col-auto">
        <a class="btn btn-success" onclick="destin_search()" id="search-link"><i class="fas fa-search"></i></a>
    </div>
</div>
<br /><br /> 
<body> 
    <table class="table ml-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Result.SingleOrDefault().Numero_identidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result.SingleOrDefault().Nombre_nino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result.SingleOrDefault().Nombre_responsabe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result.SingleOrDefault().Contacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result.SingleOrDefault().Direcciones.Detalle_direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Result)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Numero_identidad)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre_nino)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre_responsabe)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Contacto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Direcciones.Detalle_direccion)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id_nino" class=" btn btn-info"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a> |
        <a asp-action="Details" asp-route-id="@item.Id_nino" class="btn btn-success"><i class="fa fa-info-circle" aria-hidden="true"></i> Detalles</a> |
        <a asp-action="Delete" asp-route-id="@item.Id_nino" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i> Eliminar</a>
    </td>
</tr>}
    </tbody>
</table>
</body>

<footer class="page-footer font-small mdb-color darken-3 pt-4 navbar-fixed-bottom">
    
     <div class="container">
@if (Model.Result.Count() > 0)
{
    <span>
        <strong>@Model.TotalRecords</strong> registros encontrados
    </span>
    <span> | </span>
    <span>
        Pagina <strong>@Model.CurrentPage</strong> de
        <strong>@Model.TotalPage</strong>
    </span>
    <span> | </span>
}


else
{
    <span>No hay resultados para esta busqueda</span>
    <span> | </span>
}
</font>

@if (Model.CurrentPage > 1)
{

    @Html.ActionLink("<<", "Index", new { Page = 1, Search = Model.Search },
            new { @class = "btn btn-sm btn-default" }
        )

    <span></span>

    @Html.ActionLink("Anterior", "Index", new { Page = Model.CurrentPage - 1, Search = Model.Search },
            new { @class = "btn btn-sm btn-default" }
        )


}
else
{
    @Html.ActionLink("<<", "Index", new { Page = 1, Search = Model.Search },
            new { @class = "btn btn-sm btn-default disabled" }
        )
    <span></span>
    @Html.ActionLink("Anterior", "Index", new { Page = 1, Search = Model.Search },
            new { @class = "btn btn-sm btn-default disabled" }
        )
}

<span></span>

@if (Model.CurrentPage < Model.TotalPage)
{
    @Html.ActionLink("Siguiente", "Index", new { Page = Model.CurrentPage + 1, Search = Model.Search },
           new { @class = "btn btn-sm btn-default" }
       )

    <span></span>

    @Html.ActionLink(">>", "Index2", new { Page = Model.TotalPage, Search = Model.Search },
           new { @class = "btn btn-sm btn-default" }
       )
}
else
{
    @Html.ActionLink("Siguiente", "Index", new { Page = Model.CurrentPage - 1, Search = Model.Search },
            new { @class = "btn btn-sm btn-default disabled" }
        )

    <span></span>

    @Html.ActionLink(">>", "Index", new { Page = Model.TotalPage, Search = Model.Search },
            new { @class = "btn btn-sm btn-default disabled" }
        )
}
<

</footer>



