@model ProyectoEsteSi.Models.Cita

@{
    ViewData["Title"] = "Edit";
}

<br />
<h1 style="text-align:center">Editar información de la cita:</h1>

<hr />
<div class="row" style="justify-content:center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCita" />
            <div class="form-group">
                <label asp-for="Dosis.IdDosis" class="control-label"></label>
                <select asp-for="Dosis.IdDosis" class="form-control" asp-items="ViewBag.IdDosis"></select>
                <span asp-validation-for="IdDosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_proxima" class="control-label"></label>
                <input asp-for="Fecha_proxima" class="form-control" />
                <span asp-validation-for="Fecha_proxima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</button>
                <a asp-action="Index" class="btn btn-danger"><i class="fa fa-times-circle" aria-hidden="true"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
