@model ProyectoEsteSi.Models.Dosi

@{
    ViewData["Title"] = "Details";
}

<br />
<h1 style="text-align:center">Editar nueva dosis:</h1>

<div>
    <hr />

    <div style="display:flex; justify-content:center">
        <div class="form-group">
            <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Pacientes.Nombre_nino)</label>
            <span class="text">@Html.DisplayFor(model => model.Pacientes.Nombre_nino)</span>
            <br />
            <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Pacientes.Numero_identidad)</label>
            <span class="text">@Html.DisplayFor(model => model.Pacientes.Numero_identidad)</span>
            <br />
            <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Vacunas)</label>
            <span class="text">@Html.DisplayFor(model => model.Vacunas.Nombre_vacuna)</span>
            <br />
            <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.restante)</label>
            <span class="text">@Html.DisplayFor(model => model.restante)</span>
            <br />
        </div>
    </div>
</div>
<div style="display:flex; justify-content:center">
    <a asp-action="Edit" asp-route-id="@Model.IdDosis" class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a> |
    <a asp-action="Index" class="btn btn-danger"><i class="fa fa-times-circle" aria-hidden="true"></i> Cancelar</a>
</div>
