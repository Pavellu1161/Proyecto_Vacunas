@model ProyectoEsteSi.Models.Dosi

@{
    ViewData["Title"] = "Edit";
}

<br />
<h1 style="text-align:center">Editar nueva dosis:</h1>
<hr />

<div class="row" style="justify-content:center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDosis" />

            <div class="form-group">
                <b>Número de identidad del paciente:</b>
                <select asp-for="Id_nino" class="form-control" asp-items="ViewBag.Id_nino"></select>
                <span asp-validation-for="Id_nino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>Nombre de la vacuna a aplicar:</b>
                <select asp-for="Id_vacuna" class="form-control" asp-items="ViewBag.Id_vacuna"></select>
                <span asp-validation-for="Id_vacuna" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>Número de dosis restantes:</b>
                <input asp-for="restante" class="form-control" />
                <span asp-validation-for="restante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button value="Save" class="btn btn-success"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</button>
                <a asp-action="Index" class="btn btn-danger"><i class="fa fa-times-circle" aria-hidden="true"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
