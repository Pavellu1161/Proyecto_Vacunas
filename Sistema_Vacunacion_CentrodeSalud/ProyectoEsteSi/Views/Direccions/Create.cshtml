@model ProyectoEsteSi.Models.Direccion

@{
    ViewData["Title"] = "Create";
}

<br />
<h1 style="text-align:center">Ingresar nueva dirección:</h1>

<hr />
<div class="row" style="justify-content:center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <b>Nombre de la cuidad en la que recide:</b>
                <input asp-for="Cuidad" class="form-control" />
                <span asp-validation-for="Cuidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>Detalle de dirección del paciente:</b>
                <input asp-for="Detalle_direccion" class="form-control" />
                <span asp-validation-for="Detalle_direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-success"><i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar</button>
                <a asp-action="Index" class="btn btn-danger"><i class="fa fa-times-circle" aria-hidden="true"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
