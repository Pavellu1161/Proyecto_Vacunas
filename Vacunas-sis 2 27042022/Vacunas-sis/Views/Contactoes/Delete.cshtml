@model Vacunas_sis.Models.Contacto

@{
    ViewData["Title"] = "Delete";
}

<h1 style="text-align:center">Eliminar contacto:</h1>

<h3 class="text-danger" style="text-align:center">¿Esta seguro(a) de querer eliminar este contacto?</h3>
<br />
<div>
    <hr />

    <div style="display:flex; justify-content:center">
        <div class="form-group">
            <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Nombre_responsable)</label>
            <span class="text">@Html.DisplayFor(model => model.Nombre_responsable)</span>
            <br />
            <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Tipo_de_contacto)</label>
            <span class="text">@Html.DisplayFor(model => model.Tipo_de_contacto)</span>
            <br />
            <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Detalle)</label>
            <span class="text">@Html.DisplayFor(model => model.Detalle)</span>
            <br />
        </div>
    </div>

</div>

<form style="display:flex; justify-content:center" asp-action="Delete">
    <input type="hidden" asp-for="Id_contacto" />
    <button class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i> Eliminar</button>|
    <a asp-action="Index" class="btn btn-warning"><i class="fa fa-times-circle" aria-hidden="true"></i> Cancelar</a>
</form>
