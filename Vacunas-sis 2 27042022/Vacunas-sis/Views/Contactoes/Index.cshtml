@model IEnumerable<Vacunas_sis.Models.Contacto>

@{
    ViewData["Title"] = "Index";
}
<br />
<h1 style="text-align:center">Contactos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary ml-5"><i class="fa fa-plus-circle" aria-hidden="true"></i> Ingresar nuevo contacto</a>
</p>
<table class="table ml-5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_responsable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_de_contacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detalle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_responsable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_de_contacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_contacto"  class="btn btn-info"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id_contacto" class="btn btn-success"><i class="fa fa-info-circle" aria-hidden="true"></i> Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_contacto" class="btn btn-danger" ><i class="fa fa-trash-o" aria-hidden="true"></i> Eliminar</a>
            </td>

        </tr>
}
    </tbody>
</table>

