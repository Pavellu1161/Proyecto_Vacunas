@model Vacunas_sis.Models.Registro

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center">Editar información:</h1>

<hr />
<div class="row" style="justify-content:center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_registro" />
            <div class="form-group">
                <label asp-for="Numero_historia" class="control-label"></label>
                <input asp-for="Numero_historia" class="form-control" />
                <span asp-validation-for="Numero_historia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_nino" class="control-label"></label>
                <select asp-for="Id_nino" class="form-control" asp-items="ViewBag.Id_nino"></select>
                <span asp-validation-for="Id_nino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_detalle_vacuna" class="control-label"></label>
                <select asp-for="Id_detalle_vacuna" class="form-control" asp-items="ViewBag.Id_detalle_vacuna"></select>
                <span asp-validation-for="Id_detalle_vacuna" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</button>
                <a asp-action="Index" class="btn btn-danger"><i class="fa fa-times-circle" aria-hidden="true"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
