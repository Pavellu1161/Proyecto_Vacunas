@model Vacunas_sis.Models.Registro

@{
    ViewData["Title"] = "Delete";
}

<h1 style="text-align:center">Eliminar contacto:</h1>
<br />

<h3 class="text-danger" style="text-align:center">¿Esta seguro(a) de querer eliminar este registro?</h3>

<div>

    <hr />
    <div style="display:flex; justify-content:center">
        <div class="form-group">
            <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Numero_historia)</label>
            <span class="text">@Html.DisplayFor(model => model.Numero_historia)</span>
            <br />
            <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Ninos)</label>
            <span class="text">@Html.DisplayFor(model => model.Ninos.Edad_cap)</span>
            <br />
            <label class="control-label" style="font-weight:bold"> @Html.DisplayNameFor(model => model.Detalles)</label>
            <span class="text">@Html.DisplayFor(model => model.Detalles.Numero_dosis_aplicada)</span>
            <br />
        </div>
    </div>
    
    <form style="display:flex; justify-content:center" asp-action="Delete">
        <input type="hidden" asp-for="Id_registro" />
        <button class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i> Eliminar</button>|
        <a asp-action="Index" class="btn btn-warning"><i class="fa fa-times-circle" aria-hidden="true"></i> Cancelar</a>
    </form>
</div>
