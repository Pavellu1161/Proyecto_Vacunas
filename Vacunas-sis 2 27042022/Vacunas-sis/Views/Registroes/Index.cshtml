@model IEnumerable<Vacunas_sis.Models.Registro>

@{
    ViewData["Title"] = "Index";
}

<br />
<h1 style="text-align:center">Bienvenido</h1>

<p>
    <a asp-action="Create" class="btn btn-primary ml-3"><i class="fa fa-plus-circle" aria-hidden="true"></i> Ingresar nuevo contacto</a>
</p>

<table class="table ml-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero_historia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ninos.Numero_identidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ninos.Nombre_nino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detalles.Fecha_aplicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detalles.Fecha_proxima_dosis)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_historia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ninos.Numero_identidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ninos.Nombre_nino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detalles.Fecha_aplicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detalles.Fecha_proxima_dosis)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_registro" class="btn btn-info"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id_registro" class="btn btn-success"><i class="fa fa-info-circle" aria-hidden="true"></i> Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_registro" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i> Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
