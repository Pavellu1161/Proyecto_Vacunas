@model IEnumerable<Vacunas_sis.Models.Informacion_nino>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center">Registro de infrmacion del paciente:</h1>

<p>
    <a asp-action="Create" class="btn btn-primary ml-3"><i class="fa fa-plus-circle" aria-hidden="true"></i> Ingresar nuevo registro</a>
</p>
<table class="table ml-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero_identidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_nino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_responsabe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contactos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direcciones)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_identidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_nino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_responsabe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contactos.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direcciones.Barrio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_nino" class=" btn btn-info"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id_nino" class="btn btn-success"><i class="fa fa-info-circle" aria-hidden="true"></i> Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_nino" class="btn btn-danger" ><i class="fa fa-trash-o" aria-hidden="true"></i> Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
